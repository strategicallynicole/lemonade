	</header><!-- /.main-header -->
{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}} 
    <main id="content" class="content py-0">

		<div class="blog-single-cover scheme-light" data-fullheight="true" data-inview="true" data-inview-options='{ "onImagesLoaded": true }' style="background-color: #666871;">

  {{#if feature_image}}
           	<div class="fullwidth">
				<figure class="blog-single-media" data-responsive-bg="true" data-parallax="true" data-parallax-options='{ "parallaxBG": true, "triggerHook": "onLeave" }' data-parallax-from='{ "translateY": "0%" }' data-parallax-to='{ "translateY": "20%" }'>
                {{!-- This is a responsive image, it loads different sizes depending on device
                https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
                <img
                    srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
                    sizes="(max-width: 800px) 400px,
                        (max-width: 1170px) 1170px,
                            2000px"
                    src="{{img_url feature_image size="xl"}}"
                    alt="{{title}}"
                />
            </figure>
		</div><!-- /.fullwidth -->
	{{/if}}

	<div class="blog-single-details">
		<div class="container">
			<div class="row">
				<div class="col-md-6">	
					<header class="entry-header blog-single-header" data-parallax="true" data-parallax-to='{ "opacity": 0, "translateY": "30%" }' data-parallax-options='{ "triggerHook": "0.3" }'>
								<h1 class="blog-single-title entry-title h2" data-split-text="true" data-split-options='{ "type": "lines" }'>The small change that creates massive results in your life</h1>
									<div class="post-meta">
										<span class="byline">
											<span class="whitish block text-uppercase ltr-sp-1">Author:</span>
										    {{#foreach authors}}
                                                <span class="author vcard whitish">
                                                    <a class="url fn n" href="{{url}}">{{name}}</a>
                                                </span>
											{{/foreach}}
										</span>
										<span class="posted-on">
											<span class="block text-uppercase ltr-sp-1">Published on:</span>
											<a href="{{url}}" rel="bookmark">
												<time class="entry-date published updated" datetime="{{date}}">{{date}}</time>
											</a>
										</span>
							{{#if primary_tag}}
								<span class="cat-links">
									<span class="block text-uppercase ltr-sp-1">Published in:</span>
                                        {{#primary_tag}}
                                            <a href={{url}} rel="{{name}}">{{name}}</a>
                                        {{/primary_tag}}
								    </span>
							{{/if}}
                        </div><!-- /.post-meta -->
